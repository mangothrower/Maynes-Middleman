<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title%></title>
    
    <%= stylesheet_link_tag "normalize", "screen" %>
    <%= javascript_include_tag  "all" %>
  </head>
  <body class="<%= page_classes %>">
		<div class='container'>
			
			<div id='top' class='row'>
				<div class='col-md-3 col-sm-4 hidden-xs'>
					<img src='/img/banner_left.gif' class='img-responsive'>
				</div>
				<div class='col-md-6 col-sm-8 col-xs-12' id='title'>
					<h1>Mayne's Boer Goats</h1>
					<h2>Mt. Airy, MD &diams; 301-676-6275</h2>
				</div>
				<div class='col-md-3 col-sm-2 col-xs-2 hidden-xs hidden-sm'>
					<img src='/img/banner_right.gif' class='img-responsive'>
				</div>
			</div>
			
			<nav>
				<div class='row' id='topNav'>
					<div class='col-md-12'>
						<ul class="nav nav-pills main-nav">
							<%if current_page.data.page == 'Home'%>
					  		<li class='active'><a href="#">Home</a></li>
								<%else%>
								<li><a href="/">Home</a></li>
								<%end%>
							
								<%if current_page.data.page == 'Bucks'%>
					  		<li class='active'><a href="#">Bucks</a></li>
								<%else%>
								<li><a href="/Bucks">Bucks</a></li>
								<%end%>
							
								<%if current_page.data.page == 'Does'%>
					  		<li class='active'><a href="#">Does</a></li>
								<%else%>
								<li><a href="/Does">Does</a></li>
								<%end%>
							
								<li class='dropdown'>
									<a class='dropdown-toggle' data-toggle='dropdown' href="#">
										For Sale <span class='caret'></span>
									</a>
									<ul class='dropdown-menu' role='menu'>
									<%if current_page.data.page == 'Bucks For Sale'%>
							  		<li class='active'><a href="#">Bucks</a></li>
									<%else%>
										<li><a href="/for_sale/bucks">Bucks</a></li>
									<%end%>
								
									<%if current_page.data.page == 'Does For Sale'%>
							  		<li class='active'><a href="#">Does</a></li>
									<%else%>
										<li><a href="/for_sale/does">Does</a></li>
									<%end%>
									
									<%if current_page.data.page == 'Wethers For Sale'%>
							  		<li class='active'><a href="#">Wethers</a></li>
									<%else%>
										<li><a href="/for_sale/wethers">Wethers</a></li>
									<%end%>
									<li class='divider'></li>
									<%if current_page.data.page == 'Recently Sold'%>
							  		<li class='active'><a href="#">Recently Sold</a></li>
									<%else%>
										<li><a href="/for_sale/recently_sold">Recently Sold</a></li>
									<%end%>
								</ul>
							</li>
				
							<%if current_page.data.page == 'Contact'%>
					  		<li class='active'><a href="#">Contact Us</a></li>
							<%else%>
								<li><a href="/contact">Contact Us</a></li>
							<%end%>				
						</ul>
					</div>
				</div>
			</nav>
			
			<div class='row' id='content'>
				<div class='col-md-12'>
					<h1 class='page_title'><%= current_page.data.page_title%></h1>
					<%= yield %>
				</div>
			</div>
			
			<div class='row' id='footer'>
				<div class='col-md-4 col-md-offset-4'>
					
					<h3>Mayne's Boer Goats<br/>
						13045 Glissans Mill Rd<br/>
					Mt. Airy, MD &diams; 301-676-6275</h3>
					
					<img src='/img/ABGA-logo.png'>
					<h6>&copy; 2011-<%= Time.now.year %> Joshua Edward Mayne | Built By Bootstrap</h6>
					
				</div>
			</div>

		</div>
  </body>
</html>